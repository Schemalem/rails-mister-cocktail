<div class="container new-main">
  <h3> ADD A NEW COCKTAIL </h3>
  <%= simple_form_for @cocktail do |f| %>
    <%= f.input :name %>
    <%= f.input :photo, as: :file %>
    <%= f.button :submit, class:"btn btn-add-new" %>
  <% end %>
  <%= link_to cocktails_path, class:"btn btn-second" do%>
  <i class="fas fa-arrow-circle-left"></i><span> Back</span>
  <% end %>
</div>

