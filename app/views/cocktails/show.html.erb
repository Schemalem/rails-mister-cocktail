<h2><%= @cocktail.name %></h2>
<ul>
  <% @cocktail.doses.each do |dose| %>
   <li> <%= dose.description %> of <%= dose.ingredient.name %>
    <%= link_to "Remove", dose_path(dose), method: :delete, remote: false%>
</li>

  <% end %>
</ul>
<%= link_to "Add an Ingredient", new_cocktail_dose_path(@cocktail), class:"btn btn-primary"%>
<%= link_to "Back", cocktails_path, class:"btn btn-info"%>
